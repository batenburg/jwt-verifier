{
    "name": "batenburg/jwt-verifier",
    "description": "Verify JWT for Symfony and Laravel",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Patrick Batenburg",
            "email": "p.batenburg@live.nl"
        }
    ],
    "require": {
        "php": ">= 7.4.0",
        "symfony/framework-bundle": "^4.4 || ^5.1 || ^5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Batenburg\\JwtVerifier\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Batenburg\\JwtVerifier\\Test\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
